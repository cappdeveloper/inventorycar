@model ChallengerApp.Models.LoginModel

@{
    ViewBag.Title = "Log in";
}

<section>

    <div class="signinpanel">

        <div class="row">


            <!-- col-sm-7 -->

            <div class="col-md-7">

                @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
                {
                    <div class="row">
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                        <h4 class="nomargin">Sign In</h4>
                        <p class="mt5 mb20">Login to access your account.</p>

                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control uname", @placeholder = "Email" })
                        @Html.ValidationMessageFor(m => m.UserName)
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control pword", @placeholder = "Password" })
                        @Html.ValidationMessageFor(m => m.Password)
                    </div>
                    <div class="row">
                        <a href="@Url.Action("ForgotPassword","Account")"><small>Forgot Your Password?</small></a>
                    </div>
                    <div class="row">
                        <div class="col-xs-4"></div>
                        <div class="col-xs-4"></div>
                        <div class="col-xs-4">
                            <button class="btn btn-success btn-block">Sign In</button></div>
                    </div>
                }
            </div>
            <!-- col-sm-5 -->

        </div>
        <!-- row -->
    </div>
    <!-- signin -->

</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
